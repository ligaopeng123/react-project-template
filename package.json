{
    "name": "react-electron",
    "version": "0.1.0",
    "private": false,
    "homepage": ".",
    "author": "pgli",
    "main": "main.js",
    "description": "react + electron",
    "build": {
        "appId": "com.wss.app",
        "directories": {
            "output": "builder"
        },
        "win": {
            "target": [
                "nsis",
                "zip"
            ]
        },
        "files": [
            "build/**/*",
            "main.js"
        ],
        "extends": null
    },
    "dependencies": {
        "@ant-design/icons": "^4.5.0",
        "@ant-design/pro-card": "^1.13.2",
        "@ant-design/pro-descriptions": "^1.6.8",
        "@ant-design/pro-form": "^1.18.3",
        "@ant-design/pro-layout": "^6.15.3",
        "@ant-design/pro-table": "^2.30.8",
        "@gaopeng123/fetch": "^0.1.11",
        "@gaopeng123/hoc": "^0.1.7",
        "@gaopeng123/hooks": "^0.1.5",
        "@gaopeng123/login-module": "^0.1.9",
        "@gaopeng123/utils": "^0.1.22",
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.3.2",
        "@testing-library/user-event": "^7.1.2",
        "antd": "^4.16.0",
        "classnames": "^2.3.1",
        "electron": "^14.0.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-router-dom": "^5.2.0",
        "react-scripts": "^4.0.3",
        "recoil": "^0.3.1",
        "socket.io-client": "^2.3.1",
        "typescript": "^4.3.2"
    },
    "scripts": {
        "start": "set PORT=9001 && dotenv -e .env react-app-rewired start",
        "build": "set NODE_OPTIONS=--max_old_space_size=36000 && dotenv -e .env.pod react-app-rewired build",
        "start:electron": "concurrently \"wait-on http://localhost:9001 && electron .\"  \"npm run start\" ",
        "build:electron": "npm run build && electron-builder",
        "start:test_electron": "dotenv -e .env.pod electron .",
        "test": "react-scripts test",
        "eject": "react-scripts eject"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@types/classnames": "^2.2.10",
        "@types/fluent-ffmpeg": "^2.1.18",
        "@types/jest": "^24.0.0",
        "@types/mockjs": "^1.0.3",
        "@types/node": "^12.12.55",
        "@types/react": "^17.0.15",
        "@types/react-dom": "^17.0.9",
        "@types/react-router-dom": "^5.1.5",
        "@types/socket.io-client": "^1.4.34",
        "babel-plugin-import": "^1.13.3",
        "concurrently": "^6.2.1",
        "customize-cra": "^1.0.0",
        "dotenv-cli": "^4.0.0",
        "electron-builder": "^22.11.7",
        "http-proxy-middleware": "^1.0.6",
        "less-loader": "^6.1.0",
        "react-app-rewired": "^2.1.6",
        "sass": "^1.37.0",
        "sass-loader": "^8.0.2",
        "wait-on": "^6.0.0"
    }
}
