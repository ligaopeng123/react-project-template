{
    "name": "<%= name %>",
    "version": "<%= version %>",
    "changelog": {
        "labels": {
            "feat": ":rocket: ",
            "bug": ":bug: ",
            "doc": ":memo: ",
            "internal": ":house: ",
            "breaking": ":boom: "
        }
    },
    "scripts": {
        "build": "lerna exec -- pnpm run build",
        "test": "lerna exec -- pnpm run test",
        "push": "lerna exec -- pnpm run publish"
    },
    "devDependencies": {
        "lerna": "^6.1.0"
    },
    "pnpm": {
        "overrides": {
            "language-tags": "1.0.5"
        }
    },
    "workspaces": [
        "packages/*"
    ]
}
