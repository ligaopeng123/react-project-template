{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "lib": [
            "dom",
            "esnext"
        ],
        "declaration": true,
        "declarationMap": true,
        "jsx": "react-jsx",
        "strict": true,
        "pretty": true,
        "sourceMap": true,
        "baseUrl": "./src/renderer",
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "release/app/dist",
        "paths": {
            "@/*": [
                "./src/renderer"
            ],
            "@assets/*": [
                "../../assets/*"
            ],
            "@components/*": [
                "./src/components/*"
            ],
            "@hooks/*": [
                "./src/hooks/*"
            ],
            "@layouts/*": [
                "./src/layouts/*"
            ],
            "@hoc/*": [
                "./src/hoc/*"
            ],
            "@httpClient/*": [
                "./src/httpClient/*"
            ],
            "@pages/*": [
                "./src/pages/*"
            ],
            "@share/*": [
                "./src/share/*"
            ],
            "@store/*": [
                "./src/store/*"
            ]
        }
    },
    "exclude": [
        "test",
        "release/build",
        "release/app/dist",
        ".erb/dll"
    ]
}
