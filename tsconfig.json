{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "lib": [
            "dom",
            "esnext"
        ],
        "declaration": true,
        "declarationMap": true,
        "jsx": "react-jsx",
        "strict": true,
        "pretty": true,
        "sourceMap": true,
        "baseUrl": "./src/renderer",
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "outDir": "release/app/dist",
        "paths": {
            "@/*": [
                "./*"
            ],
            "@assets/*": [
                "../../assets/*"
            ],
            "@components/*": [
                "./components/*"
            ],
            "@hooks/*": [
                "./hooks/*"
            ],
            "@layouts/*": [
                "./layouts/*"
            ],
            "@hoc/*": [
                "./hoc/*"
            ],
            "@httpClient/*": [
                "./httpClient/*"
            ],
            "@pages/*": [
                "./pages/*"
            ],
            "@share/*": [
                "./share/*"
            ],
            "@store/*": [
                "./store/*"
            ]
        }
    },
    "exclude": [
        "test",
        "release/build",
        "release/app/dist",
        ".erb/dll"
    ]
}
